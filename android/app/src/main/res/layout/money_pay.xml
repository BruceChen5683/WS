<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:weightSum="7">

    <RelativeLayout
        android:id="@+id/rlAli"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/ivAliPay"
            style="@style/business_detail_iv"
            android:src="@mipmap/icon_business_alipay" />
        <TextView
            android:layout_toRightOf="@+id/ivAliPay"
            android:id="@+id/tvAliTitle"
            android:paddingLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black"
            android:text="支付宝支付"/>
        <ImageView
            android:id="@+id/ivAliConfim"
            style="@style/business_detail_iv_right"
            android:src="@mipmap/icon_business_confirm"
            android:visibility="visible"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayLight"></View>

    <RelativeLayout
        android:id="@+id/rlWeChat"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/ivWeChat"
            style="@style/business_detail_iv"
            android:src="@mipmap/icon_business_wechat" />
        <TextView
            android:layout_toRightOf="@+id/ivWeChat"
            android:id="@+id/tvWeChatTitle"
            android:paddingLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black"
            android:text="微信支付"/>
        <ImageView
            android:id="@+id/ivWeChatConfim"
            style="@style/business_detail_iv_right"
            android:src="@mipmap/icon_business_confirm"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@color/recommend_money"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/ivHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_recommend_hint"/>
        <TextView
            android:id="@+id/tvEnterMoney"
            android:layout_toRightOf="@+id/ivHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:textColor="@color/sediment_result_plus2"
            android:text="审核不通过不会收取任何费用。" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llRecommendEnter"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/text_red">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付年入驻费20元"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>