<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/personal_summary_3_padding_10_165"
    android:weightSum="2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/business_tmp" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left">
            <TextView
                android:id="@+id/tvBusinessName"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="江苏饭店"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left">
            <ImageView
                android:id="@+id/ivSimilarOneAddres"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_classifyl_location"/>
            <TextView
                android:id="@+id/tvBusinessAddress"
                android:layout_centerVertical="true"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/ivSimilarOneAddres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayMiddle"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="银湖北路18号"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_graylist_3"
            android:layout_weight="1"
            android:layout_gravity="left">
            <ImageView
                android:id="@+id/ivSimilarOneFixedPhone"
                android:paddingLeft="1dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_classifyl_phone"/>
            <TextView
                android:layout_centerVertical="true"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/ivSimilarOneFixedPhone"
                android:id="@+id/tvBusinessTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grayMiddle"
                android:maxLines="1"
                android:text="0553-008-3656"/>
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>