<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:weightSum="7">

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/tvRecommend"
            android:paddingLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:text="推  荐  人:"/>
        <EditText
            android:layout_toRightOf="@+id/tvRecommend"
            android:id="@+id/etRecommend"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/grayMiddle"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:hint="请输入您的姓名或称呼"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayLight"></View>

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/tvTel"
            android:paddingLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:text="手机号码:"/>
        <EditText
            android:layout_toRightOf="@+id/tvTel"
            android:id="@+id/etTel"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:textColorHint="@color/grayMiddle"
            android:hint="请输入您的手机号码"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@color/recommend_money"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/ivHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_recommend_hint"/>
        <TextView
            android:id="@+id/tvEnterMoney"
            android:layout_toRightOf="@+id/ivHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:textColor="@color/sediment_result_plus2"
            android:text="好友入驻万商，。。。推荐得xxx元..." />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llRecommendEnter"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/text_red">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击推荐"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>