<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout
    style="@style/personal_summary_3_padding_10_110"
    android:orientation="horizontal"
    android:weightSum="7">

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/busine_logo"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:weightSum="3"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_toRightOf="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvBusinessName"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="江苏饭店"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/rlFixedPhone"
            android:layout_toRightOf="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <ImageView
                android:paddingLeft="5dp"
                android:id="@+id/ivSimilarOneFixedPhone"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_classifyl_phone"/>
            <TextView
                android:layout_centerVertical="true"
                android:paddingLeft="2dp"
                android:layout_toRightOf="@+id/ivSimilarOneFixedPhone"
                android:id="@+id/tvBusinessTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayMiddle"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="0553-008-3656"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/rlAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_toRightOf="@+id/imageView">
            <ImageView
                android:paddingLeft="5dp"
                android:id="@+id/ivSimilarOneAddres"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_classifyl_location"/>
            <TextView
                android:id="@+id/tvBusinessAddress"
                android:layout_centerVertical="true"
                android:paddingLeft="2dp"
                android:layout_toRightOf="@+id/ivSimilarOneAddres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayMiddle"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="银湖北路18号"/>
        </RelativeLayout>
    </LinearLayout>





</LinearLayout>
</LinearLayout>