<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout
    style="@style/personal_summary_3_padding_10_110">
    <ImageView
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/busine_logo"/>

    <RelativeLayout
        android:layout_toRightOf="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvBusinessName"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="江苏饭店"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlFixedPhone"
        android:layout_toRightOf="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/ivSimilarOneFixedPhone"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_classifyl_phone"/>
        <TextView
            android:layout_centerVertical="true"
            android:paddingLeft="2dp"
            android:layout_toRightOf="@+id/ivSimilarOneFixedPhone"
            android:id="@+id/tvBusinessTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayMiddle"
            android:text="0553-008-3656"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toRightOf="@+id/imageView">
        <ImageView
            android:id="@+id/ivSimilarOneAddres"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_classifyl_location"/>
        <TextView
            android:id="@+id/tvBusinessAddress"
            android:layout_centerVertical="true"
            android:paddingLeft="2dp"
            android:layout_toRightOf="@+id/ivSimilarOneAddres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayMiddle"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="银湖北路18号"/>
    </RelativeLayout>


</RelativeLayout>
</LinearLayout>